MATCH (person:PERSON {id:4026})-[k:KNOWS*1..3]-(other)<-[hasMember:HASMEMBER]-(forum:FORUM),
      (other)<-[:HASCREATOR]-(post:POST)<-[:CONTAINEROF]-(forum)
WHERE hasMember.joinDate > 20100325000000000
RETURN forum.title as title, forum.id as id, count(distinct post) AS postCount
ORDER BY
    postCount DESC,
    id ASC
LIMIT 20;
